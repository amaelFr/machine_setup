alias ll="ls -lhAF" # Long humain all classify
alias lS="ls -lihSA" # Inode bySize
alias la='ls -liAh'
alias lh="la .[^.]*" # AllHidenfile
alias lx='ls -lXBh' # sort by extension
alias lk='ls -lSrh' # sort by size
alias lc='ls -lcrh' # sort by change time
alias lu='ls -lurh' # sort by access time
alias lr='ls -lRh' # recursive ls
alias lt='ls -ltrh' # sort by date
alias lm='ls -alh |more' # pipe through 'more'
alias lw='ls -xAh' # wide listing format
alias ll='ls -Fls' # long listing format
alias labc='ls -lap' #alphabetical sort
alias lf="ls -l | egrep -v '^d'" # files only
alias ldir="ls -l | egrep '^d'" # directories only
# alias lt='ls -h1Ss --classify'

alias rfind="find / -name"

alias psv="ps -auxf"
alias psg="ps|grep"

alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"
alias ln='ln -iv'
alias mkdir="mkdir -vp"

alias rmd="rm -rd"

alias chown='chown -v --preserve-root'
alias chmod='chmod -v --preserve-root'
alias chgrp='chgrp -v --preserve-root'

# Alias's for archives
alias tar="tar -v"
alias mktar='tar -cvf'
alias mktarbz2='tar -cvjf'
alias mktargz='tar -cvzf'
alias untar='tar -xvf'
alias untarbz2='tar -xvjf'
alias untargz='tar -xvzf'

alias cpio="cpio -v"


alias df='df -H'
alias du='du -ch'

# net
alias ipt='/sbin/iptables'
# display all rules #
alias iptlist='/sbin/iptables -L -n -v --line-numbers'
alias iptlistin='/sbin/iptables -L INPUT -n -v --line-numbers'
alias iptlistout='/sbin/iptables -L OUTPUT -n -v --line-numbers'
alias iptlistfw='/sbin/iptables -L FORWARD -n -v --line-numbers'
alias firewall=iptlist

alias null=’/dev/null’

